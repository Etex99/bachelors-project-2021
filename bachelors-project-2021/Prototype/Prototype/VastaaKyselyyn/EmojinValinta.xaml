<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.EmojinValinta"
             Title="Emoji Äänestys">
    <ContentPage.Content>
        <StackLayout>
            <Label Margin="0,0,0,15"
                Text="Valitse mielentilaasi kuvaava emoji"
                TextColor="Black"
                FontSize="20"
                HorizontalTextAlignment="Center"/>
            <Grid Margin="20, 50, 20, 50">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="0.2*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.2*"/>
                </Grid.ColumnDefinitions>
                <Button ImageSource="emoji0.png"
                        Grid.Column="1"
                        />
                <Button ImageSource="emoji1.png"
                        Grid.Column="3"/>
                <Button ImageSource="emoji2.png"
                        Grid.Column="0"
                        Grid.Row="2"/>
                <Button ImageSource="emoji3.png"
                        Grid.Column="2"
                        Grid.Row="2"/>
                <Button ImageSource="emoji4.png"
                        Grid.Column="4"
                        Grid.Row="2"/>
                <Button ImageSource="emoji5.png"
                        Grid.Column="1"
                        Grid.Row="4"/>
                <Button ImageSource="emoji6.png"
                        Grid.Column="3"
                        Grid.Row="4"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>