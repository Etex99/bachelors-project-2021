<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.EmojinValinta"
             Title="Emoji Äänestys">
    <ContentPage.Content>
        <StackLayout>
            <Label Margin="0,0,0,15"
                Text="Valitse mielentilaasi kuvaava emoji"
                TextColor="Black"
                FontSize="20"
                HorizontalTextAlignment="Center"/>
            <Grid Margin="20, 50, 20, 50">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="0.2*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.2*"/>
                </Grid.ColumnDefinitions>
                <Button ImageSource="{Binding Images[0]}"
                        Clicked="Button_Clicked"
                        ClassId="1"
                        Grid.Column="1"/>
                <Button ImageSource="{Binding Images[1]}"
                        Clicked="Button_Clicked"
                        ClassId="2"
                        Grid.Column="3"/>
                <Button ImageSource="{Binding Images[2]}"
                        Clicked="Button_Clicked"
                        ClassId="3"
                        Grid.Column="0"
                        Grid.Row="2"/>
                <Button ImageSource="{Binding Images[3]}"
                        Clicked="Button_Clicked"
                        ClassId="4"
                        Grid.Column="2"
                        Grid.Row="2"/>
                <Button ImageSource="{Binding Images[4]}"
                        Clicked="Button_Clicked"
                        ClassId="5"
                        Grid.Column="4"
                        Grid.Row="2"/>
                <Button ImageSource="{Binding Images[5]}"
                        Clicked="Button_Clicked"
                        ClassId="6"
                        Grid.Column="1"
                        Grid.Row="4"/>
                <Button ImageSource="{Binding Images[6]}"
                        Clicked="Button_Clicked"
                        ClassId="7"
                        Grid.Column="3"
                        Grid.Row="4"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>