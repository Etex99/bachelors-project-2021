<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.LuoKyselyJohdatus"
             Title="Luo kysely 1/3">


    <StackLayout Margin="20">
        <Label Margin="0,0,0,15"
               Text="Aseta johdatus"
               TextColor="Black"
               FontSize="20"/>
        
        
        <Editor x:Name="editor"
                Margin="0,0,0,15"
                BackgroundColor="WhiteSmoke"
                Placeholder="Esimerkiksi: Päiväni oli tänään..."
                HeightRequest="150" />


        <Grid Margin="0,320,0,0">
            <Button Grid.Column="1" 
                    Text="Jatka"
                    Clicked="JatkaButtonClicked" 
                    CornerRadius="100"/>
            
            <Button 
                    Text="Peruuta"
                    Clicked="PeruutaButtonClicked"
                    BackgroundColor="{StaticResource QuinaryColor}"
                    CornerRadius="100"/>
        </Grid>
    </StackLayout>
</ContentPage>